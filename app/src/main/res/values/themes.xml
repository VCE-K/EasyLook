<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Base.AppTheme" />

    <style name="AppTheme.OverlapSystemBar" parent="Base.AppTheme" />

    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--选中状态icon的颜色和字体颜色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowBackground">@color/colorPrimaryDark</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/text</item>

        <item name="actionOverflowButtonStyle">@style/actionOverflowButtonStyle</item>
        <!--正常状态下字体颜色和icon颜色-->
        <item name="android:textColorPrimary">@color/text</item>

        <item name="textColor">@color/text</item>
        <item name="iconColor">@color/iconColor</item>
        <item name="backgroundColor">@color/window_background</item>
    </style>



    <style name="ToolbarSubtitle" parent="AppTheme">
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">@color/textSecond</item>
    </style>

    <style name="actionOverflowButtonStyle" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/colorAccent</item>
    </style>



    <style name="Layout.Main" parent="Base.AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

</resources>